<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QRScan.ScannedDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:title="Animal Data" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/animalImage"
        style="@style/CircularImageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/anim_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:includeFontPadding="false"
                        android:text="Animal Name"
                        android:textAlignment="textStart"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/animal_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Animal Name"
                        android:textAlignment="textEnd"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"/>

                    <TextView
                        android:id="@+id/anim_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/animal_name"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Age"
                        android:textSize="20sp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/animal_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/animal_name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Age"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"/>

                    <TextView
                        android:id="@+id/anim_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anim_age"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Type"
                        android:textSize="20sp"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/animal_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/animal_age"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Type"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        />

                    <TextView
                        android:id="@+id/anim_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/anim_type"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Gender"
                        android:textSize="20sp"
                        android:textAlignment="textStart"/>

                    <TextView
                        android:id="@+id/animal_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/animal_type"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:text="Gender"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        />

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--        <TextView-->
            <!--            android:id="@+id/text"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:text="Data"-->
            <!--            android:textSize="20sp"-->
            <!--            tools:ignore="MissingConstraints"-->
            <!--            tools:layout_editor_absoluteX="0dp"-->
            <!--            tools:layout_editor_absoluteY="209dp"-->
            <!--            android:layout_below="@+id/card1"-->
            <!--            />-->

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>