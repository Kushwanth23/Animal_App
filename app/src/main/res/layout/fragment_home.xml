<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#7DB1AB">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:padding="25dp"
                android:text="QR CODE"
                android:textColor="#575151"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn_qr_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:gravity="bottom"
                android:padding="20dp"
                android:text="Scan"
                android:textColor="#444444"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-20dp"
            android:src="@drawable/qrcodecard" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:backgroundTint="#59C35D"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:backgroundTint="#7EB3AE">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/domestic"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/archivo_black"
                android:gravity="left"
                android:padding="25dp"
                android:text="ANIMAL DATA"
                android:textColor="#444444"
                android:textSize="26sp"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btn_add_animal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:gravity="bottom"
                android:padding="9dp"
                android:textColor="#575151"
                android:textSize="18sp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_card"
            android:backgroundTint="#EF5350">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/archivo_black"
                android:padding="27dp"
                android:text="HEALTH STATUS"
                android:textColor="#444444"
                android:textSize="20sp"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/ardunio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#00000000"
                android:gravity="bottom"
                android:padding="20dp"
                android:textColor="#4C4848"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/health" />

    </RelativeLayout>

</LinearLayout>